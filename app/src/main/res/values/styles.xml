<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="nav_bar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/nav_bar_margin_bottom</item>
        <item name="android:layout_marginTop">@dimen/nav_bar_margin_top</item>
        <item name="android:layout_marginEnd">@dimen/nav_bar_margin_end</item>
        <item name="layout_anchor">@id/bottom_app_bar</item>
        <item name="android:visibility">visible</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="menu">@menu/bottom_bar</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="itemIconTint">@drawable/navigation_selector</item>
    </style>
    <style name="bottom_app_bar_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="backgroundTint">@color/lazy_red</item>
        <item name="fabAlignmentMode">center</item>
        <item name="hideOnScroll">true</item>
        <item name="layout_scrollFlags">scroll</item>
    </style>
    <style name="title_text_style">
        <item name="android:textSize">@dimen/_28sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/_4dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/title</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="date_text_style">
        <item name="android:textSize">@dimen/_14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:padding">@dimen/_8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">@string/date</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="description_text_style">
        <item name="android:textSize">@dimen/_18sp</item>
        <item name="android:padding">@dimen/_8dp</item>
        <item name="android:text">@string/description</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="news_card_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_400dp</item>
        <item name="cardCornerRadius">@dimen/_42dp</item>
        <item name="android:layout_marginTop">@dimen/_4dp</item>
        <item name="android:layout_marginBottom">@dimen/_12dp</item>
    </style>
    <style name="gallery_card_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_120dp</item>
        <item name="cardCornerRadius">@dimen/_8dp</item>
        <item name="android:layout_margin">@dimen/_2dp</item>
    </style>
</resources>