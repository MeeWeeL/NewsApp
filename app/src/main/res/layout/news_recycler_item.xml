<?xml version="1.0" encoding="utf-8"?>
<com.meeweel.newsapp.view.customviews.CustomCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/news_card_style">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/news_recycler_date"
            style="@style/date_text_style"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/news_recycler_image"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/news_recycler_image"
            android:src="@drawable/default_picture"
            android:scaleType="centerInside"
            android:layout_width="@dimen/_0dp"
            android:layout_height="@dimen/_0dp"
            app:layout_constraintTop_toBottomOf="@id/news_recycler_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/news_recycler_title"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/news_recycler_title"
            style="@style/title_text_style"
            android:textSize="@dimen/_18sp"
            app:layout_constraintTop_toBottomOf="@id/news_recycler_image"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.meeweel.newsapp.view.customviews.CustomCardView>
